{
  "name": "price-checker-kiosk",
  "version": "1.0.0",
  "description": "Price Checker Kiosk Server for Raspberry Pi with WiFi Configuration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "install-service": "sudo cp price-checker.service /etc/systemd/system/ && sudo systemctl daemon-reload && sudo systemctl enable price-checker",
    "start-service": "sudo systemctl start price-checker",
    "stop-service": "sudo systemctl stop price-checker",
    "status-service": "sudo systemctl status price-checker",
    "logs": "sudo journalctl -u price-checker -f"
  },
  "keywords": [
    "barcode",
    "scanner",
    "kiosk",
    "raspberry-pi",
    "dietpi",
    "wifi-config"
  ],
  "author": "Price Checker Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}

